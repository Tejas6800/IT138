#include<stdio.h>
void main()
{
    int i,j,a;
    printf("enter total num of heights :");
    scanf("%d",&a);
    int h[a];
   printf("enter %d heigtts :",a);
   for(i=0;i<a;i++){
    scanf("%d",&h[i]);
   }
    int arr[a][a];
    int b[a];
    for(i=0;i<a;i++)
    {
        b[i]=i;
    }
    for(i=0;i<a;i++)
    {
        for(j=0;j<a;j++)
        {
            if(j>i)
            {
               if(h[i]<=h[j])
               {
                    arr[i][j]=h[i]*b[j-i];
               }
               else if(h[i]>h[j])
               {
                    arr[i][j]=h[j]*b[j-i];
               }
               else
               {
                    arr[i][j]=0;
               }
            }
            else
            {
                arr[i][j]=0;
            }
        }
    }
    int max;
    max=arr[0][0];
    for(i=0;i<a;i++)
    {
        for(j=0;j<a;j++)
        {
            if(arr[i][j]>max)
            {
                max=arr[i][j];
            }
            else if(arr[i][j]<=max)
            {
                max=max;
            }
        }
    }
    printf("Maximum area for water container according to your entries is %d",max);
}
